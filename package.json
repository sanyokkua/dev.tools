{
    "name": "devtools",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next build && npx serve@latest out",
        "lint": "next lint && eslint --fix",
        "prepare": "husky",
        "test": "jest --coverage --detectOpenHandles",
        "clean": "tsc --build --clean && rm -rf coverage && rm -rf package && rm -rf coreutilsts-*",
        "check:format": "prettier --check .",
        "check:lint": "eslint",
        "format": "prettier --write .",
        "verify": "npm run clean && npm run format && git add . && npm run check:format && npm run check:lint && npm run test && npm run clean"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@types/jest": "^29.5.14",
        "eslint": "^9.27.0",
        "eslint-config-next": "^15.3.2",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.2.4",
        "@chakra-ui/react": "^3.19.1",
        "@emotion/react": "^11.14.0",
        "@monaco-editor/react": "^4.7.0",
        "@types/react": "^19.1.5",
        "copy-to-clipboard": "^3.3.3",
        "coreutilsts": "^1.0.1",
        "next": "^15.3.2",
        "next-themes": "^0.4.6",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "consistent",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "objectWrap": "collapse",
        "proseWrap": "preserve",
        "plugins": [
            "prettier-plugin-organize-imports"
        ]
    },
    "files": [
        "dist/src",
        "README.md"
    ]
}
